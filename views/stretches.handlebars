<!DOCTYPE html>
<head>
	<!-- meta tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Stretches - Ergo</title>
	<!-- Bootstrap CDN -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<!-- Bootstrap 
	<link href="css/bootstrap.min.css" rel="stylesheet"> -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/main.css" rel="stylesheet">
</head>
<body>
<div id="stretches-page">

	<div id="header">
		<div class="container">
			<div class="d-flex flex-column align-items-center justify-content-center wrapper">
				<div class="login align-self-start"><h4><a href="/login">Login</a></h4></div>
				<a href="/">
				<div class="logo-container bg-primary">
					<img src="" alt="Ergo logo">
				</div>
				</a>
			</div> <!-- .wrapper -->
		</div> <!-- .container -->
	</div> <!-- #header -->

	<div id="tabs">
		<div class="container-fluid">
			<div class="wrapper">
				<div class="row">
					<div class="col-6">
						<h3>Get Started</h3>
					</div>
					<div class="col-6">
						<h3><a href="/favorites">Favorites</a></h3>
					</div>
				</div>
			</div>
		</div>
	</div> <!-- #tabs -->

	<div id="progress">
		<div class="container d-flex justify-content-center">
			<div class="progress">
		 		<div class="progress-bar" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
		</div>
	</div> <!-- #progress -->

	<div id="stretches">
		
		<div class="container">
			<h2>Stretches</h2>
		</div>
		<div class="container">
			{{#each stretches}}
				<ul>
					<li class="bg-primary">

						<h4>{{title}}</h4>
					<p>{{target}} â€¢ {{time}}</p>
					<div class="expand-stretch">
						<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
					</div>
					</li>
				</ul>
			{{/each}}
		</div>
	</div>
	
	<div id="pagination">
		<div class="container">
			<div class="wrapper d-flex justify-content-between align-items-center">
				<div class="back-button">
					<a href="/">
					<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
					</a>
				</div>
				<div class="forward-button">
					<a href="/start">
					<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
					</a>
				</div>
			</div>
		</div>
	</div> <!-- #pagination -->

</div>
</body>
</html>
