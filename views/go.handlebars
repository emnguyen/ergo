<div id="heart"><span class="oi oi-heart"></span></div>

{{#with data}}
<div id="go-page">

	<div class="container">

		<div class="progress-container">
			<ol class="progressBar">
				<li class="progress-bar-step is-complete">
				<svg class="progress-bar-icon"><use xlink:href="#checkmark-bold"/></svg>
				<span class="progress-bar-stepLabel">
			    	{{#unless setting}}
			    		Choose Setting
			    	{{/unless}}
			    	{{#if setting}}
			    		Selected {{setting}}
			    	{{/if}}
				</span>
				</li>
				<li class="progress-bar-step is-complete">
				<svg class="progress-bar-icon"><use xlink:href="#checkmark-bold"/></svg>
				<span class="progress-bar-stepLabel">Customize Stretches</span>
				</li>
				<li class="progress-bar-step is-complete">
				<svg class="progress-bar-icon"><use xlink:href="#checkmark-bold"/></svg>
				<span class="progress-bar-stepLabel">Ready to Go!</span>
				</li>
			</ol>
		</div> <!-- progress-container -->

		<svg xmlns="http://www.w3.org/2000/svg" width="0" height="0">
			<symbol id="checkmark-bold" viewBox="0 0 24 24">
			<path d="M20.285 2l-11.285 11.567-5.286-5.011-3.714 3.716 9 8.728 15-15.285z"/>
			</symbol>
		</svg>

		<div class="row">
			<div class="col text-center">
				<h2 id="routine-name">Go</h2>
				<!--
				<h5>Sending alerts to <span class="active-phone"></span></h5> -->
			
				<p>Ergo will periodically notify you to stretch for as long as you are working. Press <span class="text-success">Start</span> when you are ready and <span class="text-danger">Stop</span> when you are done. </p><p class="text-muted">Note: Leaving this page will stop notifications.</p>

				<h2 id="start-button">Start</h2>
				<h2 id="stop-button">Stop</h2>
				<h2 id="pause-button">Play/pause</h2>
				

			</div>
		</div>

		<div class="row">
			<div class="col text-center">

			</div>
		</div>

		<div class="row">
			<div class="col text-center">
				<div class="d-flex justify-content-center">
				<div class="curr-stretch-img">
					<img src="https://s21.q4cdn.com/861911615/files/images/placeholder.png">
				</div>
				</div>

			</div>
		</div>

		<!-- Save to favorites -->
		{{#if loggedIn}}
		<div class="row">
			<div class="col text-center">

				<!-- Fav form -->
				<form id="fav-form">

					<input class="fav-name" type="hidden" name="name" value="">
					<input class="fav-url" type="hidden" name="url" value="">

					<!-- Fav form submit button -->
					<div id="fav-form-submit">
						<h5>Save Routine to Favorites</h5>
					</div>
				
				</form> <!-- #fav-form -->
			</div>
		</div>
		{{/if}}

		<div class="row">
			<div class="col text-center" style="padding-bottom: 1rem">
				<p>Copy and paste this URL to stretch with friends!</p>
			</div>
		</div>

		<div class="pagination d-flex justify-content-between">

			<button class="btn btn-primary back-button" type="button" data-toggle="modal" data-target="#resetWarning">
				Back
			</button> 

			<button class="btn btn-primary forward-button confirm-stretches" type="submit">
				Next
			</button>

		</div>  <!-- .pagination -->

		<!-- Reset warning -->
		<div id="resetWarning" class="modal fade">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title">Are you sure you want to leave?</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body">
		        <p>You will stop receiving notifications.</p>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-primary" onclick="goBack()">Ok</button>
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
		      </div>
		    </div>
		  </div>
		</div> <!-- .resetWarning -->

		<!-- Save favorites -->
		<div id="saveFav" class="modal fade">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title">You must be logged in to save favorites.</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-footer">
		      	<!--
		        <button type="button" class="btn btn-primary" onclick="goBack()">Ok</button> -->
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
		      </div>
		    </div>
		  </div>
		</div> <!-- #loginToSave -->

	</div> <!-- .container -->
	
</div> <!-- #go-page -->
{{/with}}

<!-- go.js -->
<script src="js/go.js"></script>


